<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="009" author="hms">
        <createTable tableName="feedback">
            <!-- Base entity fields -->
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(255)"/>
            <column name="updated_by" type="varchar(255)"/>
            <column name="version" type="int"/>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <!-- Feedback specific fields -->
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_feedback_user" references="users(id)"/>
            </column>
            <column name="type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="submitted_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="related_entity_id" type="bigint"/>
            <column name="related_entity_type" type="varchar(100)"/>
            <column name="admin_response" type="text"/>
            <column name="responded_at" type="timestamp"/>
            <column name="responded_by" type="bigint">
                <constraints foreignKeyName="fk_feedback_responded_by" references="users(id)"/>
            </column>
            <column name="attachments" type="jsonb"/>
            <column name="is_anonymous" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_feedback_user" tableName="feedback">
            <column name="user_id"/>
        </createIndex>
        <createIndex indexName="idx_feedback_type" tableName="feedback">
            <column name="type"/>
        </createIndex>
        <createIndex indexName="idx_feedback_submitted_at" tableName="feedback">
            <column name="submitted_at"/>
        </createIndex>
        <createIndex indexName="idx_feedback_related_entity" tableName="feedback">
            <column name="related_entity_type"/>
            <column name="related_entity_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog> 